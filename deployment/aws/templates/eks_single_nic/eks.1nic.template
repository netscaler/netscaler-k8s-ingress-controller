Parameters:
  VpcId:
    Type: 'AWS::EC2::VPC::Id'
    Description: VpcId of an existing Virtual Private Cloud in the region
  VPXInstanceType:
     Default: m4.xlarge
     ConstraintDescription: Must be a valid EC2 instance type.
     Type: String
     Description: Type of Citrix ADC VPX instance
     AllowedValues:
       - m4.xlarge
       - m4.2xlarge
       - m4.4xlarge
       - m4.10xlarge
       - c4.large
       - c4.xlarge
       - c4.2xlarge
       - c4.4xlarge
       - c4.8xlarge
  VPXTenancyType:
     Default: default
     Type: String
     Description: Instance tenancy default or dedicated
     AllowedValues:
       - default
       - dedicated 
  SubnetId:
    Type: 'AWS::EC2::Subnet::Id'
    Description: SubnetId of an existing subnet in the specified VPC
  KeyName:
    ConstraintDescription: 'Can contain only alphanumeric characters, spaces, dashes and underscores.'
    Description: Name of an existing EC2 KeyPair to enable SSH access to the instances
    MinLength: '1'
    AllowedPattern: '[-_ a-zA-Z0-9]*'
    MaxLength: '64'
    Type: 'AWS::EC2::KeyPair::KeyName'
Conditions: {}
Resources:
  SecurityGroup:
    Type: 'AWS::EC2::SecurityGroup'
    Properties:
      GroupDescription: Allow http/s and ssh to  ENI from Internet
      VpcId: !Ref VpcId
      SecurityGroupIngress:
        - IpProtocol: tcp
          FromPort: '80'
          ToPort: '80'
          CidrIp: 0.0.0.0/0
        - IpProtocol: tcp
          FromPort: '443'
          ToPort: '443'
          CidrIp: 0.0.0.0/0
        - IpProtocol: tcp
          FromPort: '22'
          ToPort: '22'
          CidrIp: 0.0.0.0/0
  CitrixNodesInstanceRole:
    Type: 'AWS::IAM::Role'
    Properties:
      Path: /
      Policies:
        - PolicyName: Citrixnode
          PolicyDocument:
            Version: 2012-10-17
            Statement:
              - Action:
                  - 'ec2:DescribeInstances'
                  - 'ec2:DescribeNetworkInterfaces'
                  - 'ec2:DetachNetworkInterface'
                  - 'ec2:AttachNetworkInterface'
                  - 'autoscaling:*'
                  - 'sns:*'
                  - 'sqs:*'
                Resource: '*'
                Effect: Allow
      AssumeRolePolicyDocument:
        Version: 2012-10-17
        Statement:
          - Action:
              - 'sts:AssumeRole'
            Effect: Allow
            Principal:
              Service:
                - ec2.amazonaws.com
  CitrixNodesProfile:
    Type: 'AWS::IAM::InstanceProfile'
    Properties:
      Path: /
      Roles:
        - !Ref CitrixNodesInstanceRole
  VPXEni:
    Type: 'AWS::EC2::NetworkInterface'
    Properties:
      Description: 'VPX Network Interface'
      SourceDestCheck: 'false'
      GroupSet:
      - !Ref SecurityGroup
      SubnetId: !Ref SubnetId
      SecondaryPrivateIpAddressCount: 2
  VPXInstance:
    Type: 'AWS::EC2::Instance'
    Properties:
      Tags:
        - Value: CitrixADCVPX
          Key: Name
        - Value: LoadBalancer
          Key: Purpose
      ImageId: !FindInMap
        - AWSRegionArch2AMI
        - !Ref 'AWS::Region'
        - 64
      KeyName: !Ref KeyName
      Tenancy: !Ref VPXTenancyType
      IamInstanceProfile: !Ref CitrixNodesProfile
      InstanceType: !Ref VPXInstanceType
      NetworkInterfaces:
        - DeviceIndex: '0'
          NetworkInterfaceId: !Ref VPXEni
  ElasticIpVIP:
    Type: 'AWS::EC2::EIP'
    Properties:
      Domain: vpc
  AssociateElasticIpVIP:
    Type: 'AWS::EC2::EIPAssociation'
    Properties:
      AllocationId: !GetAtt
        - ElasticIpVIP
        - AllocationId
      InstanceId: !Ref VPXInstance
      PrivateIpAddress: !GetAtt
        - VPXEni 
        - PrimaryPrivateIpAddress 
  ElasticIpNsIP:
    Type: 'AWS::EC2::EIP'
    Properties:
      Domain: vpc
  AssociateElasticIpNsIP:
    Type: 'AWS::EC2::EIPAssociation'
    Properties:
      AllocationId: !GetAtt
        - ElasticIpNsIP
        - AllocationId
      InstanceId: !Ref VPXInstance
      PrivateIpAddress: !Select [ 0, !GetAtt VPXEni.SecondaryPrivateIpAddresses  ]
  LambdaExecutionRole:
    Type: 'AWS::IAM::Role'
    Properties:
      AssumeRolePolicyDocument:
        Version: 2012-10-17
        Statement:
          - Effect: Allow
            Principal:
              Service:
                - lambda.amazonaws.com
            Action:
              - 'sts:AssumeRole'
      Policies:
        - PolicyName: lambdalogtocloudwatch
          PolicyDocument:
            Version: 2012-10-17
            Statement:
              - Effect: Allow
                Action:
                  - 'logs:CreateLogGroup'
                  - 'logs:CreateLogStream'
                  - 'logs:PutLogEvents'
                Resource: 'arn:aws:logs:*:*:*'
        - PolicyName: lambdaallowreadec2
          PolicyDocument:
            Version: 2012-10-17
            Statement:
              - Action:
                  - 'ec2:DescribeInstances'
                  - 'ec2:DescribeSubnets'
                  - 'ec2:DescribeVpcs'
                  - 'ec2:DescribeNetworkInterfaces'
                Resource: '*'
                Effect: Allow
  VPXBootStrapFunction:
    Type: 'AWS::Lambda::Function'
    Properties:
      Code:
        S3Bucket: !Join
          - ''
          - - citrix-adc-vpx-cft-fn-
            - !Ref 'AWS::Region'
        S3Key: lambda-ha-1-nic-eks.zip 
      Handler: handler.lambda_handler
      Runtime: python2.7
      Timeout: '300'
      Role: !GetAtt
        - LambdaExecutionRole
        - Arn
  VPXBootStrap:
    Type: 'Custom::LambdaCallout'
    Properties:
      ServiceToken: !GetAtt
        - VPXBootStrapFunction
        - Arn
      EC2InstanceId: !Ref VPXInstance
      PublicIpVIP: !Ref ElasticIpVIP
      PublicNSIP: !Ref ElasticIpNsIP
Outputs:
  ManagementURL:
    Description: HTTPS URL to the Management GUI (uses self-signed cert)
    Value: !Join
      - ''
      - - 'https://'
        - !Ref ElasticIpNsIP
  ManagementURL2:
    Description: HTTP URL to the Management GUI
    Value: !Join
      - ''
      - - 'http://'
        - !Ref ElasticIpNsIP
  InstanceIdNS:
    Description: Instance Id of newly created VPX instance
    Value: !Ref VPXInstance
  PublicIpVIP:
    Description: Elastic IP address of the VPX instance associated with the VIP
    Value: !Ref ElasticIpVIP
  PrivateNSIP:
    Description: Private IP (NS IP) used for management
    Value: !Select [ 0, !GetAtt VPXEni.SecondaryPrivateIpAddresses  ] 
  PublicNSIP:
    Description: Public IP (NS IP) used for management
    Value: !Ref ElasticIpNsIP
  PrivateVIP:
    Description: Private IP address of the VPX instance associated with the VIP
    Value: !GetAtt
      - VPXInstance 
      - PrivateIp 
  SNIP:
    Description: Private IP address of the VPX instance associated with the SNIP
    Value: !Select [ 1, !GetAtt VPXEni.SecondaryPrivateIpAddresses  ] 
  SecurityGroup:
    Description: Security group id that the VPX belongs to
    Value: !Ref SecurityGroup

